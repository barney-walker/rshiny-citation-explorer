@article{ ISI:000287924400023,
Author = {Pascale, Salvatore and Gregory, Jonathan M. and Ambaum, Maarten and
   Tailleux, Remi},
Title = {{Climate entropy budget of the HadCM3 atmosphere-ocean general
   circulation model and of FAMOUS, its low-resolution version}},
Journal = {{CLIMATE DYNAMICS}},
