@article{ ISI:A1994PK57500003,
Author = {SCHWARTZMAN, DW and SHORE, SN and VOLK, T and MCMENAMIN, M},
Title = {{SELF-ORGANIZATION OF THE EARTHS BIOSPHERE - GEOCHEMICAL OR
   GEOPHYSIOLOGICAL}},
