@article{ ISI:000328928400005,
Author = {Li, Jiangnan and Chylek, Petr and Zhang, Feng},
Title = {{The Dissipation Structure of Extratropical Cyclones}},
Journal = {{JOURNAL OF THE ATMOSPHERIC SCIENCES}},
Year = {{2014}},
